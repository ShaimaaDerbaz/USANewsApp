<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="@dimen/activity_top_margin"
        android:orientation="horizontal"
        android:background="@drawable/edittextstyl">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray"
        android:text="Test"
        android:gravity="left"
        android:textSize="@dimen/activity_small_size"
        android:id="@+id/text_view_news_time"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_top_margin"
        android:textSize="@dimen/activity_top_size"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:text="Test"
        android:id="@+id/text_view_news_title"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_top_margin"
        android:id="@+id/image_view_news_image"/>

</LinearLayout>